@using MyEventCalendar.Models
@model EventModel

@using (Html.BeginForm())
{
    @Html.Partial("_ModalHeader", new ModalHeader { Heading = $"{(@Model.ID == 0 ? "Add" : "Edit")} Student"})
    <div class="modal-body form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Date, new { @class = "col-lg-3 col-sm-3 control-label" })
            <div class="col-lg-6">
                @Html.TextBoxFor(model => model.Date, new { @class = "form-control ", type="date" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ShortDescription, new { @class = "col-lg-3 col-sm-3 control-label" })
            <div class="col-lg-6">
                @Html.TextBoxFor(model => model.ShortDescription, new { @class = "form-control " })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.LongDescription, new { @class = "col-lg-3 col-sm-3 control-label" })
            <div class="col-lg-6">
                @Html.TextBoxFor(model => model.LongDescription, new { @class = "form-control " })
            </div>
        </div>
    </div>
    @Html.Partial("_ModalFooter", new ModalFooter { })
}
